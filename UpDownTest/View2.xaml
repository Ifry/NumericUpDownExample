                    <DataTemplate>
                        <mah:NumericUpDown Value="{Binding Value}" Style="{StaticResource MahApps.Styles.NumericUpDown.DataGrid.Editing}" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellEditingTemplate>
            </DataGridTemplateColumn>
